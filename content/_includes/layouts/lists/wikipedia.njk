---
title: vinckr lists
year: 2024
author: vinckr
---

{% include "../header.njk" %}
{% block content %}
  <body class="dark:bg-[#111010]">
    <div class="max-w-4xl mb-40 flex flex-col md:flex-row mx-4 mt-8 md:mt-20 lg:mt-32 lg:mx-auto">
      {% include "../sidebar.njk" %}
      <main class="flex-auto min-w-0 mt-6 md:mt-0 flex flex-col md:px-0">
        <h1 class="prose text-4xl dark:prose-invert font-extrabold">
          {{ title }}
        </h1>
        <div class="prose prose-zinc md:prose-base lg:prose-lg dark:prose-invert">
          <div>
            {{ content | safe }}
          </div>
          <button onclick="displayRandomArticle()">Show Random Article</button>
          <div id="randomArticleContainer"></div>
          <div>
            <ul>
              {% for item in wikipedia %}
                <li>
                  <a href="{{ item.url }}">
                    {{ item.title }}
                  </a>
                </li>
              {% endfor %}
            </div>
          </div>
        </main>
      </div>
      <script>
        function displayRandomArticle() {
          var data = [{% for item in wikipedia %}{
                "url": "{{ item.url | escape }}",
                "title": "{{ item.title | escape }}"
              }
              {% if not loop.last %},{% endif %}{% endfor %}];
          var randomIndex = Math.floor(Math.random() * data.length);
          var randomArticle = data[randomIndex];
          document.getElementById('randomArticleContainer').innerHTML = `
        <p style="background:#5c8d4f; display: inline-block; max-width: 100%;" class="p-2 rounded shadow-lg">Read this article selected just for you: <a href="${
            randomArticle.url
          }">${
            randomArticle.title
          }</a></p>
      `;
        }
      </script>
      {% include "../footer.njk" %}
    </body>
  </html>
</html>{% endblock %}</body></body>